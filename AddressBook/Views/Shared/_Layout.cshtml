<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Address Book</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Address Book", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="lnkMain" class="navigation">@Html.ActionLink("List", "Index", "Home")</li>
                    <!-- <li id="lnkMap" class="navigation">@Html.ActionLink("Map", "Index", "Home")</li>  -->
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-right">&copy; @DateTime.Now.Year - Address Book</p>
        </footer>
    </div>
    @RenderSection("pagemodals", required: false)
    <div id="appConfirm" class="modal fade" role="dialog">
        <div class="modal-dialog" id="appConfirmDialog">
            <div class="modal-content" id="appConfirm-container">
                <div class="modal-header" id="appConfirm-header"></div>
                <div class="modal-body" id="appConfirm-body"></div>
                <div class="modal-footer" id="appConfirm-footer"></div>
            </div>
        </div>
    </div>
    <div id="appAlert" class="modal fade" role="dialog">
        <div class="modal-dialog" id="appDialog">
            <div class="modal-content" id="appDialog-container">
                <div class="modal-header" id="appDialog-header"></div>
                <div class="modal-body" id="appDialog-body"></div>
                <div class="modal-footer" id="appDialog-footer"></div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/addressbook/jQuery.common.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
