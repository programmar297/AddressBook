@model AddressBook.ViewModels.AddressViewModel
@using (Ajax.BeginForm("Save", "Home", new { ts = DateTime.Now.Ticks }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, OnSuccess = "submitAddress" }, new { id = "frmAddress" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        @if (Model.Id == 0)
        {
            <h4 class="modal-title">New Address</h4>

        }
        else
        {
            <h4 class="modal-title">Address # @Model.Id</h4>
            @Html.HiddenFor(m => m.Id, new { @id = "hidId" });
        }
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col col-xs-12">
                <label>Name:</label>
                @Html.TextBoxFor(m => m.Name, new { @id = "txtName", @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <label>E-mail Address:</label>
                @Html.TextBoxFor(m => m.Email, new { @id = "txtEmail", @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <label>Address:</label>
                @Html.TextBoxFor(m => m.Addr, new { @id = "txtAddr", @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <label>Phone Number:</label>
                @Html.TextBoxFor(m => m.PhoneNo, new { @id = "txtPhone", @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <label>Job Title:</label>
                @Html.TextBoxFor(m => m.JobPosition, new { @id = "txtJob", @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <label>Institution:</label>
                @Html.TextBoxFor(m => m.Institute, new { @id = "txtJob", @class = "form-control" })
            </div>
        </div>
    
</div>
    <div class="modal-footer">
        @if (Model.Id > 0)
        {
            <button type="button" class="btn btn-danger pull-left" id="btnDelete" data-id="@Model.Id">Delete</button>
        }
        <button type="button" class="btn btn-primary has-spinner" id="btnSave">Save <span class="spinner"><i class="fa fa-spin fa-refresh"></i></span></button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>

}
